<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd">

	<defaultCache maxElementsInMemory="10000" eternal="false"
		timeToIdleSeconds="86400" timeToLiveSeconds="86400" overflowToDisk="false"
		diskPersistent="false" diskExpiryThreadIntervalSeconds="120"
		memoryStoreEvictionPolicy="LRU" statistics="false" />

	<cache name="books" maxElementsInMemory="10000" eternal="false"
		overflowToDisk="false" timeToIdleSeconds="86400" timeToLiveSeconds="86400"
		memoryStoreEvictionPolicy="LFU" transactionalMode="off" />

	<cache name="categories" maxElementsInMemory="10000" eternal="false"
		overflowToDisk="false" timeToIdleSeconds="86400" timeToLiveSeconds="86400"
		memoryStoreEvictionPolicy="LFU" transactionalMode="off" />

</ehcache>